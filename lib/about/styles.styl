h3
    &.text-center
        font-size 40px
        margin-bottom 1.5em
        color #000
        text-transform capitalize

.about,.skills-agileinfo,.experience,.gallery,.w3-services
    padding 6em 0

.about_left
    background url(https://images.pexels.com/photos/12597/437e798540fff54b876cf4460d375161.jpg?auto=compress&cs=tinysrgb&dpr=2&h=650&w=940) no-repeat 0px 0px
    background-size cover
    min-height 500px
    padding 5em 0em 0 4em

ul
    &.address
        li
            ul
                &.agileits-address-text
                    li
                        display inline-block
                        font-size 1em
                        color #eee
                        margin-top 1em
                        &:nth-child(1)
                            width 25%
                        a
                            color #eee

.about-social
    margin-top 30px
    a
        span
            &.fa
                background #eee
                color #333
                font-size 15px
                outline-offset 2px
                outline 2px solid #f3f3f3
                width 30px
                height 30px
                text-align center
                line-height 30px
                margin 0 10px

.about_right
    padding-left 4em
    h3
        font-size 30px
        text-transform uppercase
        letter-spacing 0px
        color #ff6c5f
        margin-bottom 1em
    h4
        text-transform capitalize
        color #252323
        margin-bottom 1em
    p
        line-height 28px
        color #212121
        letter-spacing .5px
        font-size 14px
        text-transform capitalize
        padding-top 1em
        padding-bottom 1em
        border-top 1px dashed #646464
    ul
        li
            display inline-block
            margin-top 2em
            a
                padding 10px 30px
                text-decoration none
                color #333
                font-size 15px
                border 2px solid #333

.about_right .w3l, .about_right .w3ls_more:hover
    border 2px solid #333
    color #333 !important
    background none

.about_right .w3l:hover, .about_right .w3ls_more
    border 2px solid #333
    color #fff !important
    background #333